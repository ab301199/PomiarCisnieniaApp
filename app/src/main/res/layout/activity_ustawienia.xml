<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ustawienia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".Ustawienia">

    <TextView
        android:id="@+id/ustawienia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ustawienia"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="@string/wyloguj_si"
        android:gravity="center"
        android:id="@+id/wylogujbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4AB6FC"
        android:layout_marginBottom="70dp" />

    <LinearLayout
        android:id="@+id/custom_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:weightSum="4"> <!-- Ustawiamy sumę wag na 4 (liczba ikon) -->

        <!-- Ikona Strona Główna -->
        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:layout_gravity="center" /> <!-- Centrujemy obrazek w każdej przestrzeni -->

        <!-- Ikona Tętno -->
        <ImageView
            android:id="@+id/nav_heart"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_heart"
            android:layout_gravity="center" />

        <!-- Ikona Leki -->
        <ImageView
            android:id="@+id/nav_pills"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_pills"
            android:layout_gravity="center" />

        <!-- Ikona Ustawienia -->
        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>